<div id="header" class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://cms-internationsgmbh.netdna-ssl.com/cdn/image/article/public/cms-media/public/most-welcoming-countries_s583329655.jpg);">
    <div class="container">
      <div class="row">
        <div class="col-12 col-lg-12 col-sm-6">
          <h1>Rent a buddy</h1>
          <p><span id="banner-typed-text"></span></p>
          <%= form_tag friends_path, class:"col-sm-3 pl-0", method: :get do %>
            <%= text_field_tag :query,
                                params[:query],
                                class: "form-control form-text my-1",
                                placeholder: "Type a city...",
                                autocomplete: "off",
                                id: "friends_address" %>
             <%= submit_tag "Buddy call !", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
</div>

<div class="container min-100vh">
  <h1>Friends List</h1>
  <% if @friends.blank? %>
    <p>No friends are around you. Make a new search : </p>
    <%= form_tag friends_path, class:"col-sm-3 pl-0", method: :get do %>
            <%= text_field_tag :query,
                                params[:query],
                                class: "form-control form-text my-1",
                                placeholder: "Type a city...",
                                autocomplete: "off",
                                id: "friends_address" %>
            <%= number_field_tag :kms %>
            <%= submit_tag "Buddy call !", class: "btn btn-primary" %>
    <% end %>
  <% else %>
    <div class="row">
      <% @friends.each do |friend| %>
        <div class="col-12 col-lg-6">
          <%= link_to friend_path(friend), class:"link-card-product" do %>
            <div class="card-product mb-3">
              <%= cl_image_tag friend.photo.key, height:120, width:120, class:"mt-3 mb-3" %>
              <div class="card-product-infos">
                <div class="d-flex justify-content-between mb-3">
                  <h2><%= friend.first_name %></h2>
                  <p><%= friend.birth_date %></p>
                    </div>
                      <p class="mb-3"><%= friend.description %></p>
                        <div class="d-flex justify-content-between">
                          <div>
                           <% @tags.sample(4).each do |tag| %>
                            <span class="badge badge-secondary"><%= tag %></span>
                          <% end %>
                        </div>
                      <h2><%= friend.price %>â‚¬ / hour</h2>
                    </div>
                </div>
              </div>
           <% end %>

        </div>
      <% end %>
    </div>
  <% end %>
</div>


  <div id="map"
       style="width: 800px; height: 600px;"
       data-markers="<%= @markers.to_json %>"
       data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>


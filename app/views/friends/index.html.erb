<div class="container d-flex flex-column align-items-center min-100vh">
  <h1>Friends List</h1>
  <% @friends.each do |friend| %>
  <%= link_to friend_path(friend), class:"link-card-product" do %>
  <div class="card-product mb-3">
      <%= cl_image_tag friend.photo.key, height:120, width:120, class:"mt-3 mb-3" %>
        <div class="card-product-infos">
          <div class="d-flex justify-content-between mb-3">
            <h2><%= friend.first_name %></h2>
            <p><%= friend.birth_date %></p>
          </div>
          <p class="mb-3"><%= friend.description %></p>
          <div class="d-flex justify-content-between">
            <div>
              <span class="badge badge-secondary">beer</span>
              <span class="badge badge-secondary">football</span>
              <span class="badge badge-secondary">skate</span>
              <span class="badge badge-secondary">fun</span>
            </div>
            <h2><%= friend.price %>â‚¬ / hour</h2>
          </div>
        </div>
    </div>
  <% end %>

  <% end %>

  <div id="map"
       style="width: 800px; height: 600px;"
       data-markers="<%= @markers.to_json %>"
       data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>

</div>


